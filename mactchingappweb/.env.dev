# API端点的URL（可能用于Flutter应用的配置）
# API_URL=https://api.dev.example.com

# 后端服务器的URL
BACKEND_URL_HOST=http://127.0.0.1:8000

# Django的Secret Key（用于加密，会话、密码等的安全）
SECRET_KEY=your-secret-key-here

# 调试模式（开发环境设置为True，生产环境设置为False）
DEBUG=True

# 允许的主机列表
ALLOWED_HOSTS=127.0.0.1,localhost

# CORS的允许列表，允许从这些来源发起跨域请求
CORS_ORIGIN_WHITELIST=http://localhost:3000,http://127.0.0.1:3000

# 数据库配置：PostgreSQL数据库连接URL
DATABASE_URL=postgres://your_db_user:your_db_password@localhost:5432/your_db_name

# 邮件配置：用于发送电子邮件
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
DEFAULT_FROM_EMAIL=your-email@example.com
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Stripe API密钥和相关配置：用于支付集成
STRIPE_API_SECRET_KEY=your-stripe-api-secret-key
MY_URL=http://127.0.0.1:8000
STRIPE_ITEM_PRICE=your-stripe-item-price-id
